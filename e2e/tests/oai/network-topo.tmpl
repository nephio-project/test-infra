apiVersion: topo.nephio.org/v1alpha1
kind: RawTopology
metadata:
  name: nephio
spec:
  nodes:
    srl:
      address: $LEAF_IP:57400
      provider: srl.nokia.com
    mgmt:
      provider: docker.io
    regional:
      provider: docker.io
      labels:
        nephio.org/cluster-name: core
    edge:
      provider: docker.io
      labels:
        nephio.org/cluster-name: regional
    edge02:
      provider: docker.io
      labels:
        nephio.org/cluster-name: edge
  links:
  - endpoints:
    - { nodeName: srl, interfaceName: e1-1}
    - { nodeName: core, interfaceName: eth1}
  - endpoints:
    - { nodeName: srl, interfaceName: e1-2}
    - { nodeName: regional, interfaceName: eth1}
  - endpoints:
    - { nodeName: srl, interfaceName: e1-3}
    - { nodeName: edge, interfaceName: eth1}
  - endpoints:
    - { nodeName: regional, interfaceName: eth2}
    - { nodeName: edge, interfaceName: eth2}
  - endpoints:
    - { nodeName: regional, interfaceName: eth3}
    - { nodeName: edge, interfaceName: eth3}
